// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // Catatan: untuk SQLite, kita bisa tulis langsung stringnya begini agar lebih mudah
  // ATAU pakai env("DATABASE_URL") tapi pastikan file .env nya ada.
  // Supaya anti-ribet, GANTI baris url jadi: url = "file:./dev.db"
}

// Desaign tabel "Guestbook"
model Guestbook {
  id        String   @id @default(cuid()) // ID unik otomatis
  nama      String
  pesan     String
  createdAt DateTime @default(now())      // Catat waktu dibuat
}